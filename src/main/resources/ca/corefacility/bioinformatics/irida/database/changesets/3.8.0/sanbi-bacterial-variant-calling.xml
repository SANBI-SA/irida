<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<changeSet id="sanbi_bvc" author="zipho">
		<createTable tableName="analysis_sanbi_bacterial_variant_calling">
			<column name="id" type="bigint(20)">
				<constraints primaryKey="true" nullable="false"
					referencedTableName="analysis" referencedColumnNames="id"
					foreignKeyName="FK_ANALYSIS_BACTERIAL_VARIANT_CALLING" />
			</column>
		</createTable>

		<addColumn tableName="sequencing_object">
			<column name="sanbi_bacterial_variant_calling" type="bigint(20)">
			<constraints referencedTableName="analysis_submission"
				referencedColumnNames="id" nullable="true" foreignKeyName="FK_SEQUENCING_OBJECT_SANBI_BVC" />
			</column>
		</addColumn>

		<addColumn tableName="sequencing_object_AUD">
			<column name="sanbi_bacterial_variant_calling" type="bigint(20)" />
		</addColumn>

		<addColumn tableName="project">
			<column name="sanbi_bacterial_variant_calling_uploads" type="bit(1)" valueBoolean="false"
				defaultValueBoolean="false">
				<constraints nullable="false" />
			</column>
		</addColumn>

		<addColumn tableName="project_AUD">
			<column name="sanbi_bacterial_variant_calling_uploads" type="bit(1)" valueBoolean="false"/>
		</addColumn>

	</changeSet>

</databaseChangeLog>
